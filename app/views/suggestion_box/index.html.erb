    <% @suggestions.each do |suggestion| %>
    <div class="row">
      <div class="col-xs-12">
        <h2><%= suggestion.title %></h2>
        <p><%= suggestion.comment %></p>
        <p class="lead"><button class="btn btn-default">Read More</button></p>
        <p class="pull-right"><span class="label label-default">keyword</span> <span class="label label-default">tag</span> <span class="label label-default">post</span></p>
        <ul class="list-inline">
          <li><a href="#"><i class="glyphicon glyphicon-user"></i> <%= suggestion.author %></a></li>
          <li><a href="#"><i class="glyphicon glyphicon-calendar"></i> <%= suggestion.created_at.to_formatted_s(:long) %></a></li>
          <li><a href="#"><i class="glyphicon glyphicon-comment"></i> 2 Comments</a></li>
          <li><a href="#"><i class="glyphicon glyphicon-share"></i> 14 Shares</a></li>
        </ul>
      </div>
    </div>
    <hr>
    <% end %>
