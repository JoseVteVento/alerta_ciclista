<%= form_for([@suggestion, @suggestion.comments.build]) do |f| %>
  
  <% unless @comment.nil? %>
    <%= render 'shared/error_messages', object: @comment %>
  <% end %>
  
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
