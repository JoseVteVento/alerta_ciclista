<div class="row box">
  <h4><%= t('.search_filter_title') %></h4>
  <%= form_tag(root_path) do %>
    <div class="col-md-6">
      <div class="field">
        <%= label_tag t('.type_filter') %>
        <%= select_tag :category, options_for_select([[''],
                                                      [t('.category_1'), 1],
                                                      [t('.category_2'), 2],
                                                      [t('.category_3'), 3],
                                                      [t('.category_4'), 4]],
                                                      selected: 0), {class: "form-control"} %>
      </div>
      <div class="field">
        <%= label_tag t('.title_filter') %>
        <%= text_field_tag :title, nil, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= label_tag t('.address_filter') %>
        <%= text_field_tag :address, nil, class: "form-control" %>
      </div>
      <div class="field">
        <%= label_tag t('.distance_filter') %>
        <%= select_tag :distance, options_for_select([[t('.default_option'),               0.5],
                                                      ['< 1 '   + t('.kilometer'),           1],
                                                      ['< 3 '   + t('.kilometer').pluralize, 3],
                                                      ['< 5 '   + t('.kilometer').pluralize, 5],
                                                      ['< 10 '  + t('.kilometer').pluralize, 10]]),
                                                      class: "form-control" %>
      </div>
    </div>
    <div class="actions pull-right">
      <br>
      <%= submit_tag t('.search_button'), class: "btn btn-large btn-red" %>
    </div>
  <% end %>
</div>

<% @suggestions.each do |suggestion| %>
  <div class="row">
    <div class="col-md-12 box">
        <div class="title">
          <h2><%= link_to suggestion.title, suggestion, class: 'stealth' %></h2>
        </div>
        <p class="pull-right">
          <% if suggestion.has_address? %>
            <span class="label label-default"><%= suggestion.street %></span>
            <span class="label label-default"><%= suggestion.postal_code %></span>
            <span class="label label-default"><%= suggestion.district %></span>
          <% end %>
        </p>
        <ul class="list-inline">
          <li><i class="glyphicon glyphicon-info-sign"></i> <%= t(".category_#{suggestion.category}") %></li>
          <li><i class="glyphicon glyphicon-user"></i> <%= suggestion.author %></li>
          <li><i class="glyphicon glyphicon-calendar"></i> <%= created_at(suggestion) %></li>
          <li><i class="glyphicon glyphicon-comment"></i> <%= pluralize(suggestion.number_of_comments, t('.comment')) %></li>
          <li><i class="glyphicon glyphicon-edit"></i> <%= pluralize(suggestion.number_of_supporters, t('.support')) %></li>
        </ul>
    </div>
  </div>
<% end %>
<%= will_paginate @suggestions, renderer: BootstrapPagination::Rails %>
